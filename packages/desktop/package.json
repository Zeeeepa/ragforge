{
  "name": "@luciformresearch/ragforge-desktop",
  "version": "0.1.0",
  "description": "RagForge Desktop - AI-powered document search and code analysis",
  "author": "Lucie Defraiteur <luciedefraiteur@luciformresearch.com>",
  "license": "LRSL-1.1",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "ELECTRON_DISABLE_SANDBOX=1 electron-vite dev",
    "build": "electron-vite build",
    "preview": "ELECTRON_DISABLE_SANDBOX=1 electron-vite preview",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "package:all": "electron-builder -mwl"
  },
  "dependencies": {
    "@luciformresearch/ragforge": "*",
    "@types/three": "^0.182.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^2.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.7.0",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.luciformresearch.ragforge",
    "productName": "RagForge",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Development",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
